<p>Hi, <%= @user.first_name %></p>

<a href="/shoes">Go to all products</a>
<form action='/sessions/delete' method='post'>
		<input type='hidden' value='<%=form_authenticity_token%>' name='authenticity_token'>
		<input type='hidden' name='_method' value='delete'>
		<input type='submit' value='Log Out'>
</form>

<p>Sell Product</p>

<form action='/shoes/new' method='post'>
	<input type='hidden' value='<%=form_authenticity_token%>' name='authenticity_token'>
	Name:  <input type='text' name='product'>
	Amount:  <input type='text' name='amount'>
	<input type='submit' value='Sell'>
</form>
<h3>Your products that are not yet sold:</h3>
	<table class="table table-bordered">
			<thead>
		  		<tr>
		    	<th>Product</th>
		    	<th>Date Posted</th>
		    	<th>Amount</th>
		    	<th>Action</th>
		  		</tr>
			</thead>
			<tbody>
				<% @user.shoes.each do |shoe| %>
				<tr>
				<td><%= shoe.product %></td>
				<td><%= shoe.created_at %></td>
				<td><%= shoe.ammount %></td>
				<td><form action='/shoes/<%= shoe.id %>' method='post'>
						<input type='hidden' value='<%=form_authenticity_token%>' name='authenticity_token'>
						<input type='hidden' name='_method' value='delete'>
						<input type='submit' value='Remove'>
					</form></td> 
				</tr>
				<% end %>
			</tbody>
		</table>
<h3>Purchases</h3>
	<table class="table table-bordered">
			<thead>
		  		<tr>
		    	<th>Product</th>
		    	<th>Date Bought</th>
		    	<th>Seller</th>
		    	<th>Amount</th>
		  		</tr>
			</thead>
			<tbody>
				<% @bought.each do |shoe| %>
				<tr>
				<td><%= shoe.shoe.product %></td>
				<td><%= shoe.created_at %></td>
				<td><%= shoe.user.first_name %></td>
				<td><%= shoe.shoe.ammount %></td>

				</tr>
				<% end %>
			</tbody>
		</table>
				<p>Total purchase: <%= @total %></p>
