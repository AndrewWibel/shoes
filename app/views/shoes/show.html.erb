<p>Hi, <%=@user.first_name%></p>
<a href="/dashboard/<%= @user.id %>">Dashboard</a>
<form action='/sessions/delete' method='post'>
		<input type='hidden' value='<%=form_authenticity_token%>' name='authenticity_token'>
		<input type='hidden' name='_method' value='delete'>
		<input type='submit' value='Log Out'>
</form>

</form>
<h2>Listing products</h2>
		<table class="table table-bordered">
			<thead>
		  		<tr>
		    	<th>Product</th>
		    	<th>Seller</th>
		    	<th>Date Posted</th>
		    	<th>Amount</th>
		    	<th>Action</th>
		  		</tr>
			</thead>
			<tbody>
				<% @shoes.each do |shoe| %>
				<tr>
				<td><%= shoe.product %></td>
				<td><%= shoe.user.first_name %> <%= shoe.user.last_name %></td>
				<td><%= shoe.created_at %></td>
				<td><%= shoe.ammount %></td>
				<td><form action='/shoes/<%= shoe.id %>' method='post'>
						<input type='hidden' value='<%=form_authenticity_token%>' name='authenticity_token'>
						<input type='submit' value='Buy'>
					</form></td> 
				</tr>
				<% end %>
			</tbody>
</table>